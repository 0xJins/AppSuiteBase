<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.AppSuite.Controls.SplashWindowImpl"
        Background="{x:Null}"
        CanResize="False"
        HasSystemDecorations="False"
        Height="200"
        ShowInTaskbar="False"
        Title="{Binding $parent[Window].ApplicationName}"
        TransparencyLevelHint="Transparent"
        Width="400"
        WindowStartupLocation="CenterScreen">

	<!-- Styles -->
	<Window.Styles>
		<Style Selector="TextBlock">
			<Setter Property="Foreground" Value="#ffffff"/>
		</Style>
	</Window.Styles>

	<!-- Content -->
	<Border BorderThickness="1" CornerRadius="4" Opacity="0">
		
		<Border.Background>
			<SolidColorBrush Color="{DynamicResource SystemAccentColorDark3}" Opacity="0.8"/>
		</Border.Background>
		<Border.BorderBrush>
			<SolidColorBrush Color="Black"/>
		</Border.BorderBrush>
		<Border.Transitions>
			<Transitions>
				<DoubleTransition Property="Opacity" Duration="0:0:1"/>
			</Transitions>
		</Border.Transitions>
		
		<Grid ColumnDefinitions="Auto,Auto" HorizontalAlignment="Center" Margin="30" RowDefinitions="Auto,Auto" VerticalAlignment="Center">

			<!-- Icon -->
			<Image Height="80" Margin="0,0,20,0" Source="{Binding $parent[Window].IconBitmap}" Width="80" VerticalAlignment="Center"/>

			<!-- Title and version -->
			<StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center">
				<TextBlock FontSize="30" FontWeight="Bold" Margin="0,0,0,10" Text="{Binding $parent[Window].ApplicationName}"/>
				<TextBlock Margin="0,0,0,3" Text="{Binding $parent[Window].Version}"/>
				<TextBlock Text="Â©2021 Carina Studio"/>
			</StackPanel>

			<!-- Message -->
			<TextBlock Grid.ColumnSpan="2" Grid.Row="1" HorizontalAlignment="Center" Margin="0,30,0,0" Text="{Binding $parent[Window].Message}" TextTrimming="CharacterEllipsis" TextWrapping="NoWrap"/>

		</Grid>
	</Border>

</Window>
