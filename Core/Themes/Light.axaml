<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Base styles -->
	<FluentTheme Mode="Light"/>
	<StyleInclude Source="/Themes/Base.axaml"/>

	<!-- Resources -->
	<Styles.Resources>

		<!-- Button -->
		<SolidColorBrush x:Key="ButtonBackground" Color="{DynamicResource SystemBaseLowColor}" Opacity="0.5"/>
		<SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="{DynamicResource SystemBaseLowColor}" Opacity="0.3"/>
		<SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="{DynamicResource SystemBaseHighColor}" Opacity="0.2"/>
		<SolidColorBrush x:Key="ButtonBackgroundPressed" Color="{DynamicResource SystemBaseLowColor}" Opacity="0.8"/>

		<!-- ComboBox -->
		<StaticResourceExtension x:Key="ComboBoxBackground" ResourceKey="ButtonBackground"/>
		<StaticResourceExtension x:Key="ComboBoxBackgroundDisabled" ResourceKey="ButtonBackgroundDisabled"/>
		<StaticResourceExtension x:Key="ComboBoxBackgroundPointerOver" ResourceKey="ButtonBackgroundPointerOver"/>
		<StaticResourceExtension x:Key="ComboBoxBackgroundPressed" ResourceKey="ButtonBackgroundPressed"/>

		<!-- Control -->
		<Color x:Key="Color/Control.Border">#22000000</Color>
		<Color x:Key="Color/Control.Border.Dark">#33000000</Color>
		<Color x:Key="Color/Control.Border.Light">#11000000</Color>

		<!-- DatePicker -->
		<StaticResourceExtension x:Key="DatePickerButtonBackground" ResourceKey="ButtonBackground"/>
		<StaticResourceExtension x:Key="DatePickerButtonBackgroundDisabled" ResourceKey="ButtonBackgroundDisabled"/>
		<StaticResourceExtension x:Key="DatePickerButtonBackgroundPointerOver" ResourceKey="ButtonBackgroundPointerOver"/>
		<StaticResourceExtension x:Key="DatePickerButtonBackgroundPressed" ResourceKey="ButtonBackgroundPressed"/>

		<!-- Dialog -->
		<Color x:Key="Color/Dialog.ControlButtonsPanel.Background">#e0e0e0</Color>
		<Color x:Key="Color/Dialog.TextBlock.Border.Header1">#7f000000</Color>
		<Color x:Key="Color/Dialog.TextBlock.Foreground.Description">#7f000000</Color>

		<!-- Icon -->
		<Color x:Key="Color/Icon">#333333</Color>

		<!-- LinkTextBlock -->
		<Color x:Key="Color/LinkTextBlock.Foreground">#0077cc</Color>
		<Color x:Key="Color/LinkTextBlock.Foreground.Disabled">#4d0077cc</Color>
		<Color x:Key="Color/LinkTextBlock.Foreground.PointerOver">#0085e5</Color>
		<Color x:Key="Color/LinkTextBlock.Foreground.Pressed">#0068b2</Color>

		<!-- Menu -->
		<Color x:Key="Color/Menu.Background">#e0e0e0</Color>

		<!-- RepeatButton -->
		<StaticResourceExtension x:Key="RepeatButtonBackground" ResourceKey="ButtonBackground"/>
		<StaticResourceExtension x:Key="RepeatButtonBackgroundDisabled" ResourceKey="ButtonBackgroundDisabled"/>
		<StaticResourceExtension x:Key="RepeatButtonBackgroundPointerOver" ResourceKey="ButtonBackgroundPointerOver"/>
		<StaticResourceExtension x:Key="RepeatButtonBackgroundPressed" ResourceKey="ButtonBackgroundPressed"/>

		<!-- Separator -->
		<Color x:Key="Color/Separator.Background">#4f000000</Color>

		<!-- SplashWindow -->
		<Color x:Key="Color/SplashWindow.Background">#eeeeee</Color>
		<Color x:Key="Color/SplashWindow.Foreground">#222222</Color>

		<!-- StatusBar -->
		<Color x:Key="Color/StatusBar.Background.Inactive">#8a8a8a</Color>

		<!-- TabItem -->
		<Color x:Key="Color/TabItem.Header.Background">#d0d0d0</Color>
		<Color x:Key="Color/TabItem.Header.Background.PointerOver">#d8d8d8</Color>
		<Color x:Key="Color/TabItem.Header.Background.Selected">#e0e0e0</Color>
		<Color x:Key="Color/TabItem.Header.Border">#d0d0d0</Color>
		<Color x:Key="Color/TabItem.Header.Border.PointerOver">#d8d8d8</Color>
		<Color x:Key="Color/TabItem.Header.Border.Selected">#b0b0b0</Color>

		<!-- TextBox -->
		<SolidColorBrush x:Key="TextControlBorderBrushPointerOver">#7f7f7f7f</SolidColorBrush>

		<!-- TimePicker -->
		<StaticResourceExtension x:Key="TimePickerButtonBackground" ResourceKey="ButtonBackground"/>
		<StaticResourceExtension x:Key="TimePickerButtonBackgroundDisabled" ResourceKey="ButtonBackgroundDisabled"/>
		<StaticResourceExtension x:Key="TimePickerButtonBackgroundPointerOver" ResourceKey="ButtonBackgroundPointerOver"/>
		<StaticResourceExtension x:Key="TimePickerButtonBackgroundPressed" ResourceKey="ButtonBackgroundPressed"/>

		<!-- ToggleButton -->
		<StaticResourceExtension x:Key="ToggleButtonBackground" ResourceKey="ButtonBackground"/>
		<StaticResourceExtension x:Key="ToggleButtonBackgroundDisabled" ResourceKey="ButtonBackgroundDisabled"/>
		<StaticResourceExtension x:Key="ToggleButtonBackgroundPointerOver" ResourceKey="ButtonBackgroundPointerOver"/>
		<StaticResourceExtension x:Key="ToggleButtonBackgroundPressed" ResourceKey="ButtonBackgroundPressed"/>
		<SolidColorBrush x:Key="ToggleButtonBackgroundChecked" Color="{DynamicResource SystemAccentColorDark1}" />
		<SolidColorBrush x:Key="ToggleButtonBackgroundCheckedDisabled" Color="{DynamicResource SystemAccentColorDark1}" Opacity="0.5"/>
		<SolidColorBrush x:Key="ToggleButtonBackgroundCheckedPointerOver" Color="{DynamicResource SystemAccentColor}" />
		<SolidColorBrush x:Key="ToggleButtonBackgroundCheckedPressed" Color="{DynamicResource SystemAccentColorDark1}"/>

		<!-- ToolBar -->
		<Color x:Key="Color/ToolBar.Background">#e0e0e0</Color>

		<!-- Window -->
		<Color x:Key="Color/Window.Background">#eeeeee</Color>
		<Color x:Key="Color/Window.Background.Tabbed">#c0c0c0</Color>
		<Color x:Key="Color/Window.Background.Tabbed.Transparent">#c0c0c0c0</Color>
		<Color x:Key="Color/Window.Background.Transparent">#e5eeeeee</Color>

		<!-- WorkingArea -->
		<Color x:Key="Color/WorkingArea.Background">#eeeeee</Color>
		<Color x:Key="Color/WorkingArea.Panel.Background">#d8d8d8</Color>

	</Styles.Resources>
	
</Styles>
