<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Base styles -->
	<FluentTheme Mode="Light"/>
	<StyleInclude Source="/Themes/Base.axaml"/>

	<!-- Resources -->
	<Styles.Resources>

		<!-- Icon -->
		<Color x:Key="Color/Icon">#222222</Color>

		<!-- Separator -->
		<Color x:Key="Color/Separator.Background">#4f000000</Color>

		<!-- ToolBar -->
		<Color x:Key="Color/ToolBar.Background">#eeeeee</Color>

		<!-- Window -->
		<Color x:Key="Color/Window.Background">#eeeeee</Color>
		<Color x:Key="Color/Window.Background.Transparent">#bfd0d0d0</Color>

	</Styles.Resources>
	
</Styles>
